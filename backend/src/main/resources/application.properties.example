# Application
spring.application.name=expense-insight-api
server.port=8080

# Database
spring.datasource.url=jdbc:postgresql://localhost:5432/expenseinsight
spring.datasource.username=${DB_USERNAME}
spring.datasource.password=${DB_PASSWORD}
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA/Hibernate
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect

# Flyway
spring.flyway.enabled=true
spring.flyway.baseline-on-migrate=true
spring.flyway.locations=classpath:db/migration
spring.flyway.baseline-version=0

# Security (dev)
spring.security.user.name=${DEV_USER}
spring.security.user.password=${DEV_PASS}

# Logging
logging.level.org.springframework.security=DEBUG
logging.level.com.expenseinsight=DEBUG

# JWT Configuration
jwt.secret=${JWT_SECRET}
jwt.expiration=86400000

# CORS Configuration (for frontend)
cors.allowed.origins=http://localhost:3000

# OpenAI configuration (set in production as environment variable `OPENAI_API_KEY`)
# For local development you can copy these to `application-local.properties` (gitignored)
openai.model=gpt-4o-mini
openai.max.tokens=300
openai.temperature=0.7

# Resilience / retry defaults
openai.retry.count=3
openai.retry.initialDelayMs=500

# Rate limiting (AI endpoints)
ai.rate.limit.requests-per-minute=60
ai.rate.limit.capacity=60
ai.rate.limit.free.requests-per-minute=10
ai.rate.limit.premium.requests-per-minute=200

# Redis (optional) - for distributed rate limiting add REDIS_URL or host/port
# spring.redis.url=redis://localhost:6379
# spring.redis.host=localhost
# spring.redis.port=6379

